{
  "name": "Figment",
  "version": "0.5.2",
  "type": "module",
  "description": "Visual coding environment for creative AI",
  "author": "EMRG",
  "main": "src/electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "start": "cross-env NODE_ENV=development electron --trace-warnings .",
    "build": "cross-env NODE_ENV=production vite build",
    "build-library": "cross-env NODE_ENV=production rollup -c",
    "dist": "rimraf build && rimraf dist && npm run build && electron-builder --mac --universal && electron-builder --win --x64",
    "fastdist": "rimraf build && rimraf dist && npm run build && cross-env DIST_ENV=development electron-builder --dir -c.mac.identity=null",
    "format": "prettier --write src/**/*.{js,jsx}"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.20.0",
    "chroma-js": "2.4.2",
    "clsx": "^2.1.0",
    "codemirror": "5.63.1",
    "fuse.js": "^6.4.6",
    "glob": "10.3.10",
    "jexl": "^2.3.0",
    "lodash": "4.17.21",
    "minimist": "1.2.8",
    "node-osc": "9.1.0",
    "react": "18.2.0",
    "react-color": "2.19.3",
    "react-dom": "18.2.0",
    "seedrandom": "3.0.5",
    "three": "0.161.0",
    "tween-functions": "1.2.0",
    "twgl.js": "5.5.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "autoprefixer": "10.4.17",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "0.20.1",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.1",
    "vite": "5.1.4"
  },
  "build": {
    "appId": "be.debleser.figment",
    "productName": "Figment",
    "files": [
      "build/**/*",
      "examples/**/*",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "res"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "res/entitlements.mac.plist",
      "entitlementsInherit": "res/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app can use the webcam to classify realtime images or detect poses. Images are never uploaded or stored online."
      },
      "notarize": {
        "teamId": "5X78EYG9RH"
      },
      "fileAssociations": [
        {
          "ext": "fgmt",
          "name": "Figment Project",
          "role": "Editor",
          "rank": "Owner",
          "isPackage": false,
          "icon": "res/fgmt.icns"
        }
      ]
    },
    "dmg": {
      "sign": false
    }
  },
  "win": {
    "target": "nsis",
    "icon": "res/icon.ico",
    "fileAssociations": [
      {
        "ext": "fgmt",
        "name": "Figment Project",
        "role": "Editor",
        "rank": "Owner",
        "isPackage": false,
        "icon": "res/fgmt.ico"
      }
    ]
  }
}
