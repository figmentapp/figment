{
  "name": "Figment",
  "version": "0.5.5",
  "type": "module",
  "description": "Visual coding environment for creative AI",
  "author": "EMRG",
  "main": "src/electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "start": "cross-env NODE_ENV=development electron --trace-warnings .",
    "build": "cross-env NODE_ENV=production vite build",
    "build-library": "cross-env NODE_ENV=production rollup -c",
    "dist": "rimraf build && rimraf dist && npm run build && electron-builder build --mac --universal && electron-builder build --win --x64",
    "fastdist": "rimraf build && rimraf dist && npm run build && cross-env DIST_ENV=development electron-builder --dir -c.mac.identity=null",
    "format": "prettier --write src/**/*.{js,jsx}"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "chroma-js": "2.4.2",
    "clsx": "^2.1.0",
    "codemirror": "5.63.1",
    "fuse.js": "^7.1.0",
    "glob": "10.3.10",
    "jexl": "^2.3.0",
    "lodash": "4.17.21",
    "minimist": "1.2.8",
    "node-osc": "9.1.0",
    "onnxruntime-web": "^1.20.1",
    "react": "19.0.0",
    "react-color": "2.19.3",
    "react-dom": "19.0.0",
    "seedrandom": "3.0.5",
    "three": "0.173.0",
    "tween-functions": "1.2.0",
    "twgl.js": "5.5.4"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@tailwindcss/vite": "^4.0.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.20",
    "cross-env": "7.0.3",
    "dotenv": "^16.5.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.3",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "be.debleser.figment",
    "productName": "Figment",
    "files": [
      "build/**/*",
      "examples/**/*",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "res"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "res/entitlements.mac.plist",
      "entitlementsInherit": "res/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app can use the webcam to classify realtime images or detect poses. Images are never uploaded or stored online."
      },
      "fileAssociations": [
        {
          "ext": "fgmt",
          "name": "Figment Project",
          "role": "Editor",
          "rank": "Owner",
          "isPackage": false,
          "icon": "res/fgmt.icns"
        }
      ]
    },
    "dmg": {
      "sign": false
    }
  },
  "win": {
    "target": "nsis",
    "icon": "res/icon.ico",
    "fileAssociations": [
      {
        "ext": "fgmt",
        "name": "Figment Project",
        "role": "Editor",
        "rank": "Owner",
        "isPackage": false,
        "icon": "res/fgmt.ico"
      }
    ]
  }
}
