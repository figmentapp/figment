{
  "name": "figment",
  "version": "0.2.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production parcel build -d build -t electron --public-url . src/ui/index.html",
    "dist": "rimraf dist && npm run build && electron-builder build",
    "format": "prettier --write js/**/*.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.12.1",
    "chroma-js": "2.1.0",
    "codemirror": "5.49.2",
    "lodash": "4.17.15",
    "minimist": "1.2.0",
    "ml5": "0.4.3",
    "postcss-modules": "1.5.0",
    "preact": "10.3.1",
    "seedrandom": "3.0.5",
    "tailwindcss": "1.1.4",
    "tween-functions": "1.2.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "1.3.0",
    "cross-env": "^6.0.3",
    "dotenv": "8.2.0",
    "electron": "^7.1.9",
    "electron-builder": "^21.2.0",
    "electron-notarize": "0.2.1",
    "parcel-bundler": "1.12.4",
    "prettier": "1.19.1",
    "rimraf": "^3.0.0"
  },
  "build": {
    "appId": "be.emrg.figment",
    "productName": "Figment",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "buildResources": "res"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "res/entitlements.mac.plist",
      "entitlementsInherit": "res/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app can use the webcam to classify realtime images or detect poses. Images are never uploaded or stored online."
      }
    },
    "dmg": {
      "sign": false
    }
  }
}
