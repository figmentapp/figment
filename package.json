    "tailwindcss": "1.1.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "1.3.0",
    "cross-env": "^6.0.3",
    "electron": "^7.1.9",
    "electron-builder": "^21.2.0",
    "parcel-bundler": "1.12.4",
    "prettier": "1.19.1",
    "rimraf": "^3.0.0"
  }
}
