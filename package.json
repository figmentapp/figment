{
  "name": "figment",
  "version": "0.3.0",
  "description": "Visual coding environment for creative AI",
  "author": "EMRG",
  "main": "src/electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production vite build",
    "dist": "rimraf build && rimraf dist && yarn build && electron-builder --mac --universal && electron-builder --win --x64",
    "fastdist": "rimraf build && rimraf dist && yarn build && cross-env DIST_ENV=development electron-builder --dir",
    "format": "prettier --write src/**/*.{js,jsx}"
  },
  "dependencies": {
    "chroma-js": "2.1.2",
    "codemirror": "5.63.1",
    "lodash": "4.17.21",
    "minimist": "1.2.5",
    "node-glob": "^1.2.0",
    "react": "17.0.2",
    "react-color": "2.19.3",
    "react-dom": "17.0.2",
    "seedrandom": "3.0.5",
    "tailwindcss": "2.2.16",
    "three": "0.133.0",
    "tween-functions": "1.2.0",
    "twgl.js": "^4.19.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "1.3.6",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "electron": "15.1.0",
    "electron-builder": "22.11.7",
    "electron-notarize": "1.1.1",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "vite": "2.6.2"
  },
  "build": {
    "appId": "be.emrg.figment",
    "productName": "Figment",
    "afterSign": "scripts/notarize.js",
    "files": [
      "build/**/*",
      "examples/**/*",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "res"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "res/entitlements.mac.plist",
      "entitlementsInherit": "res/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app can use the webcam to classify realtime images or detect poses. Images are never uploaded or stored online."
      }
    },
    "dmg": {
      "sign": false
    }
  }
}
